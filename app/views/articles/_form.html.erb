<%# form partial  %>

<div class="container" align="center"> 
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :article, url: articles_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                
                <div class="form-group mb-3 row">
                    <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>
                
                <div class="form-group mb-3 row">
                    <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <p>
                    <%= link_to 'Back', articles_path, class: "btn btn-outline-danger btn-lg" %> <%= f.submit class: "btn btn-outline-success btn-lg" %>
                </p>

            <% end %>
        </div>
    </div>
</div>