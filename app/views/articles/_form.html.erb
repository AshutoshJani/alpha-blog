<%# form partial  %>

<div class="container" align="center"> 
    <%= form_with scope: :article, url: articles_path, local: true do |f| %>

        <p>
            <%= f.label :title %> <br>
            <%= f.text_field :title %>
        </p>

        <p>
            <%= f.label :description %> <br>
            <%= f.text_area :description %>
        </p>

        <p>
            <button><%= link_to 'Back', articles_path %></button> <%= f.submit %>
        </p>

    <% end %>
</div>