<%# form partial  %>

<div class="container" align="center"> 
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with scope: :user, url: users_path, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
                
                <div class="form-group mb-3 row">
                    <%= f.label :username, class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>
                
                <div class="form-group mb-3 row">
                    <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>

                <div class="form-group mb-3 row">
                    <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                    </div>
                </div>

                <p>
                    <%= link_to 'Back', root_path, class: "btn btn-outline-danger btn-lg" %> <%= f.submit "Sign Up", class: "btn btn-outline-success btn-lg" %>
                </p>

            <% end %>
        </div>
    </div>
</div>