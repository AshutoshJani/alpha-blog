<h1 class="text-center mt-4">Category: <%= @category.name %></h1>

<div class="text-center mt-4">
    <%= link_to 'Back', :back, class: "text-center btn btn-outline-secondary btn-lg" %>
    <%= link_to 'Edit category', edit_category_path(@category), class: "text-center btn btn-outline-info btn-lg" %>
    <% if logged_in? && current_user.admin? %>
        <% if @user == current_user %>
            <%= link_to 'Edit category', edit_category_path(@category), class: "text-center btn btn-outline-info btn-lg" %>
            <%# link_to "Delete category", category_path(@category), class: "btn btn-outline-danger btn-lg", method: :delete, data: { confirm: "This action will delete your account and all associated articles as well, are you sure you want to delete your account" } %>
        <% end %>
    <% end %>
</div>

<h3 class="text-center mt-4 mb-4">Articles</h3>

<div class="flickr_pagination mt-4">
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

