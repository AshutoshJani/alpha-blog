<div class="container" align="center"> 
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                
                <div class="form-group mb-3 row">
                    <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
                    </div>
                </div>

                <p>
                    <%= link_to 'Back', :back, class: "btn btn-outline-danger btn-lg" %> 
                    <%= f.submit class: "btn btn-outline-success btn-lg" %>
                </p>

            <% end %>
        </div>
    </div>
</div>